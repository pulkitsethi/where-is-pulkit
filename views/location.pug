              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='/')
              strong #{title}
          #bs-example-navbar-collapse-1.collapse.navbar-collapse
            ul.nav.navbar-nav.navbar-right
              li.active
                a(href='/')
                  span.glyphicon.glyphicon-map-marker
                  |  Location
              | &#x9;                    
              li
                a(href='/photos')
                  span.glyphicon.glyphicon-camera
