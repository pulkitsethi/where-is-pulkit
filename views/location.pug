doctype html
html
  head
    title= title
    meta(name='mobile-web-app-capable', content='yes')
    link(rel='shortcut icon', sizes='128x148', href='/images/driving-car-icon-2.png')
    meta(name='apple-mobile-web-app-capable', content='yes')
    link(rel='apple-touch-startup-image', href='/images/driving-car-icon-2.png')
    meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no')
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi", crossorigin="anonymous")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css")
    link(rel='stylesheet', href='https://netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap-theme.min.css')
    script(src='https://api.mapbox.com/mapbox-gl-js/v2.10.0/mapbox-gl.js')
    link(href='https://api.mapbox.com/mapbox-gl-js/v2.10.0/mapbox-gl.css', rel='stylesheet')
    link(href='/stylesheets/style.css', rel='stylesheet', media='screen')
    style.
      #status-bar .well {
      border-color: #D3D3D3;
      }
      .leaflet-top {
      top: 10px;
      }
  body
    #wrapper
      #header
        nav.navbar.navbar-expand-lg.navbar-light.bg-light
          .container-fluid
            a.navbar-brand(href='/') #{title}
            button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
              span.navbar-toggler-icon
            .collapse.navbar-collapse#navbarNav
                ul.navbar-nav.ms-auto
                    li.nav-item
                        a.nav-link.active(aria-current='page', href='/') 
                          span.bi.bi-geo-alt-fill 
                          | Location
                    li.nav-item
                        a.nav-link(href='/photos') 
                          span.bi.bi-camera-fill
                          | Photos

      #status-bar.hidden-xs
        .card
          h4.card-header Current City
          card-body
            #current-city.lead
    
      #container.wrap
        #map-view
          #map.leaflet-container.leaflet-fade-anim(style='position: relative;')

    // Javascript
    script(src='https://code.jquery.com/jquery-3.6.1.min.js', integrity='sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ=', crossorigin='anonymous')
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous")
    script(src='/socket.io/socket.io.js')
    script(src='/javascripts/jquery.noty.packaged.min.js')
    script(type='text/javascript', src='/javascripts/bouncemarker.min.js')
    script(type='text/javascript', src='/javascripts/leaflet.awesome-markers.min.js')
    script(type='text/javascript', src='/javascripts/whereispulkit.js')
    script.
      $(function() {
        WhereIsPulkit.init({ element: 'map-canvas'});
      });